{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{navigation}}

{{! The big featured header }}
<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <nav class="main-nav overlay clearfix">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
        {{!--<a class="subscribe-button icon-feed" href="{{@blog.url}}/rss/">Subscribe</a>--}}
    </nav>
    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title">{{@blog.title}}</h1>
            <h2 class="page-description">{{@blog.description}}</h2>
        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
</header>

    {{!--Currently, the get API helper does not work with pagination at beta phase--}}
    {{!--{{#get "posts" limit="5" include="author,tags" filter="tags:notes"}}--}}
  {{#foreach posts}}
      {{!--I added this if statement to see if anything gets fixed--}}
      {{#if tags name="notes"}}  
    <article class="{{post_class}}">
        <header class="post-header">
            <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
        </header>
        <section class="post-excerpt">
            <p>{{excerpt words="26"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
        </section>
        <footer class="post-meta">
            {{!--{{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />{{/if}}--}}
            {{!--{{author}}--}}
            {{!--{{tags prefix=" on "}}--}}
            <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
        </footer>
    </article>
        {{/if}}
  {{/foreach}}
